@model Shop.Data.Item
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete @Model.Name?</h2>
<div class="navbar">
    <a href="/Item/Show/@Model.Id">Cancel</a>
</div>
<form method="POST" action="/Item/Delete/@Model.Id">
    <div class="inpfield"><input type="submit" value="Confirm" /></div>
</form>
